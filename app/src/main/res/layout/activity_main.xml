<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/abc">


    <TextView
        android:id="@+id/textViewHisName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:height="50dp"
        android:text="Enter His Name"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextHisName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewHisName"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewHerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextHisName"
        android:layout_marginTop="50dp"
        android:height="50dp"
        android:text="Enter Her Name"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextHerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewHerName"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonClickMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextHerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:onClick="calculateLoveBtnPressed"
        android:text="Calculate Love"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>